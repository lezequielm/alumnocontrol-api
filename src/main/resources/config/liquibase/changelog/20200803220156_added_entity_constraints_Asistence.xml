<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Asistence.
    -->
    <changeSet id="20200803220156-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="student_id"
                                 baseTableName="asistence"
                                 constraintName="fk_asistence_student_id"
                                 referencedColumnNames="id"
                                 referencedTableName="student"/>

        <addForeignKeyConstraint baseColumnNames="institute_id"
                                 baseTableName="asistence"
                                 constraintName="fk_asistence_institute_id"
                                 referencedColumnNames="id"
                                 referencedTableName="institute"/>

        <addForeignKeyConstraint baseColumnNames="class_meeting_id"
                                 baseTableName="asistence"
                                 constraintName="fk_asistence_class_meeting_id"
                                 referencedColumnNames="id"
                                 referencedTableName="class_meeting"/>

        <addForeignKeyConstraint baseColumnNames="group_id"
                                 baseTableName="asistence"
                                 constraintName="fk_asistence_group_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_group"/>

    </changeSet>
</databaseChangeLog>
